<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".WelcomeScreen.PertamaFragment">

    <ImageView
        android:id="@+id/imageTutorial1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/logo"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/inter_28pt_semibold"
        android:text="Selamat Datang di ZooApp!"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:letterSpacing="-0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageTutorial1" />

    <TextView
        android:id="@+id/textDesc1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_28pt_medium"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:text="Jelajahi dunia satwa dari genggamanmu. Lihat berbagai hewan eksotis dan pelajari fakta menarik!"
        android:textColor="#D1D1D1"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle1" />

</androidx.constraintlayout.widget.ConstraintLayout>