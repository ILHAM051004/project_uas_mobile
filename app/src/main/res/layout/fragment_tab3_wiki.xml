<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".Content.Tab3WikiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Judul -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Mengonversi Model ke Format ONNX"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Card Utama -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card"
            android:orientation="vertical"
            android:padding="18dp"
            android:elevation="5dp">

            <!-- Intro -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âš™ï¸ Model dari framework seperti PyTorch, TensorFlow, atau Scikit-learn bisa dikonversi ke format ONNX supaya lebih fleksibel dan bisa dijalankan di berbagai platform tanpa harus pakai framework aslinya."
                android:textColor="#3E2723"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"
                android:paddingBottom="12dp" />

            <!-- Garis -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D7CCC8"
                android:layout_marginVertical="6dp" />

            <!-- PyTorch -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”¥ Dari PyTorch ke ONNX"
                android:textStyle="bold"
                android:textColor="#5D4037"
                android:textSize="18sp"
                android:paddingTop="6dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gunakan perintah bawaan PyTorch seperti ini:"
                android:textColor="#3E2723"
                android:textSize="15.5sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFE2D3"
                android:padding="10dp"
                android:textColor="#4E342E"
                android:textSize="14sp"
                android:textIsSelectable="true"
                android:text="torch.onnx.export(model, dummy_input, 'model.onnx')"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Di sini, *model* adalah model PyTorch kamu, dan *dummy_input* adalah contoh input untuk membantu ONNX memahami bentuk data yang masuk."
                android:textColor="#3E2723"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp"
                android:paddingBottom="10dp" />

            <!-- Garis -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D7CCC8"
                android:layout_marginVertical="6dp" />

            <!-- TensorFlow -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŒ Dari TensorFlow ke ONNX"
                android:textStyle="bold"
                android:textColor="#5D4037"
                android:textSize="18sp"
                android:paddingTop="6dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Untuk TensorFlow, bisa pakai library bantu bernama tf2onnx:"
                android:textColor="#3E2723"
                android:textSize="15.5sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFE2D3"
                android:padding="10dp"
                android:textColor="#4E342E"
                android:textSize="14sp"
                android:textIsSelectable="true"
                android:text="python -m tf2onnx.convert --saved-model tensorflow_model_path --output model.onnx"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perintah di atas akan mengubah model TensorFlow yang sudah disimpan ke file model.onnx dengan cepat dan mudah."
                android:textColor="#3E2723"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp"
                android:paddingBottom="10dp" />

            <!-- Garis -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D7CCC8"
                android:layout_marginVertical="6dp" />

            <!-- Scikit-learn -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ§© Dari Scikit-learn ke ONNX"
                android:textStyle="bold"
                android:textColor="#5D4037"
                android:textSize="18sp"
                android:paddingTop="6dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Untuk model Scikit-learn, gunakan paket *skl2onnx*:"
                android:textColor="#3E2723"
                android:textSize="15.5sp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFE2D3"
                android:padding="10dp"
                android:textColor="#4E342E"
                android:textSize="14sp"
                android:textIsSelectable="true"
                android:text="from skl2onnx import convert_sklearn\nfrom skl2onnx.common.data_types import FloatTensorType\n\nonnx_model = convert_sklearn(model, initial_types=[('input', FloatTensorType([None, n_features]))])\nwith open('model.onnx', 'wb') as f:\n    f.write(onnx_model.SerializeToString())"
                android:fontFamily="monospace"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dengan cara ini, model dari Scikit-learn juga bisa disimpan sebagai file .onnx dan dipakai di sistem lain tanpa ubah framework."
                android:textColor="#3E2723"
                android:textSize="15sp"
                android:lineSpacingExtra="6dp"
                android:paddingBottom="6dp" />

            <!-- Kesimpulan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸš€ Intinya: ONNX bikin semua model AI bisa berbicara dalam 'bahasa yang sama'. Mudah dikonversi, cepat dijalankan, dan fleksibel di mana pun!"
                android:textColor="#4E342E"
                android:textStyle="bold"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"
                android:paddingTop="8dp"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
